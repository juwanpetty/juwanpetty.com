{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@*": [
        "./*"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@context/*": [
        "src/context/*"
      ],
      "@utilities/*": [
        "src/utilities/*"
      ],
      "@/types/*": [
        "src/types/types.ts"
      ],
      "@data/*": [
        "src/app/data/*"
      ],
      "@features/*": [
        "src/features/*"
      ],
    },
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "next.config.mjs",
    "tailwind.config.ts"
  ],
  "exclude": [
    "node_modules",
  ]
}